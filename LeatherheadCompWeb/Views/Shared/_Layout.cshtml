<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="site-wrapper">
        <div id="site-header">
            <div style="float: left;">
                <a class="site-logo" href="/"></a>
            </div>
            <div style="float: right; height: 77px; left: 545px; position: absolute; top: 30px;">
                <img src="~/Content/Images/Introduction.jpg" />
            </div>
            <div class="cf"></div>
        </div>
        <nav class="text-14" id="main-nav">
            <ul>
                <li class="is-selected"><a href="/">Home</a></li>
                <li><a href="/our-clients">Next Event</a></li>
                <li><a href="/contact">Future Events</a></li>
                <li class=""><a href="/tools">Meet the team</a></li>
                <li class=""><a href="/tools">Results</a></li>
                <li class=""><a href="/tools">Contact Us</a></li>
                <li class="is-last"><a href="/tools">Dance related</a></li>
            </ul>
        </nav>
        <div id="site-content">
            <div class="main">
                @RenderBody()
            </div>
            <div class="announcements">
                <p class="sponsor">
                    Competitions sponsored by<br />
                    <a href="http://www.sparkledesignsuk.com" target="_blank">
                        <img border="0" src="~/Content/Images/SparklesDesign.jpg" />
                    </a>
                </p>
                <hr />
                <p>
                    The entrance fee is only £10.50 for Juveniles/Juniors and parents of Juveniles/Juniors competitors is £7.50.  Adult competitors £13.50 and spectators watching the Adults £7.50.
                </p>
            </div>
            <div class="cf"></div>
        </div>

        <div id="site-footer">
            <a href="/" class="footer-logo"></a>
            <p class="footer-copyright text-12">&copy; Robert's Design @DateTime.Today.Year</p>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
